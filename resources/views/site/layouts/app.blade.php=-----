	<script>

(function($) {

  $('.second.circle').circleProgress({
    value: 1.0
  }).on('circle-animation-progress', function(event, progress) {
    $(this).find('strong').html(Math.round(10 * progress) + '<i>%</i>');
  });


  setTimeout(function() { c2.circleProgress('value', 0.7); }, 1000);
  setTimeout(function() { c2.circleProgress('value', 1.0); }, 1100);
  setTimeout(function() { c2.circleProgress('value', 0.5); }, 2100);


})(jQuery);
	</script>
	
	
